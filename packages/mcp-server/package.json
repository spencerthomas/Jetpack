  "author": "Tom Spencer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/spencerthomas/Jetpack.git",
    "directory": "packages/mcp-server"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@jetpack/shared": "workspace:*",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/node": "^22.15.21",
    "typescript": "^5.8.3"
