{
  "name": "@jetpack/mcp-server",
  "version": "0.1.0",
  "description": "MCP server for Claude Code integration with Jetpack",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "jetpack-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
