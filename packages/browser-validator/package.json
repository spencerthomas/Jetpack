  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@jetpack-agent/shared": "workspace:*",
    "playwright": "^1.40.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
